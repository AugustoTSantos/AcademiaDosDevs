import java.util.Scanner;

public class Aula06 {
    public static void main(String[] args) {
        int numero; //criando a variavel número
           
        float numero2; //crindo outra variavel para numeros float
            
        String nome;


        Scanner leitor = new Scanner(System.in);
            System.out.println("Digite um número inteiro abaixo");
                numero = leitor.nextInt(); // definando que o valor de "numero vai ser igual ao que o usuario digitar em leitor usando o metodo next do Scanner"
            System.out.println("O número inteiro digitado foi: " + numero);

            System.out.println("");

            System.out.println("Digite um número float abaixo");
                numero2 = leitor.nextFloat();
            System.out.println("O número float digitado foi: " + numero2);
            
            System.out.println("");

            System.out.println("Digite seu Nome Completo abaixo");
                nome = leitor.nextLine(); //usando nextLine para o Scanner ler até um quebra de linha         
            System.out.println("Seu nome completo é: " + nome);
        
    }
}
